# @lc app=leetcode id=27 lang=c++
#[27] Remove Element (Easy)
# @lc code=start

class Solution {
    public int removeElement(int[] nums, int val) {
         int k = 0;  // 'k' acts as the write head: the index for the next non-'val' element.

        // 'i' acts as the read head, iterating through all elements.
        for(int i = 0; i < nums.length; i++){ 

        // If the current element is *not* the value we want to remove,
            if(nums[i] != val){ 

                // place it at the 'k' position. 
                // Note: If i == k, this is a redundant assignment, but safe.
                nums[k] = nums[i]; 

                k++; // Advance the write head.
            }
        }

        return k; // 'k' is the new length.
    }
};
# @lc code=end
